.messages
	width 80%
	margin auto
	padding-bottom 2em

	@media all and (min-width: 800px)
		width 70%

	@media all and (min-width: 640px)
		width 60%

	@media all and (min-width: 1200px)
		width 50%

	&__header
		margin-bottom 1em
		font-size 1.1em
		font-weight 500
		text-align center

	&__item
		margin-bottom 1em
		padding .5em
		background-color #ddd

		@media all and (min-width: 640px)
			padding 1em

	&__text
		clear both
		margin-top 2em
		padding .5em
		text-align justify
		background-color #fff

		@media all and (min-width: 640px)
			clear none
			margin-top 1em
			padding 1em

	&__button
		width 100px
		height 2em
		font-weight 900
		color white
		text-transform uppercase
		border none
		background-color #17f
		cursor pointer

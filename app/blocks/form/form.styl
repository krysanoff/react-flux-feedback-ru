.form
	margin auto
	width 90%

	@media all and (min-width: 640px)
		width 70%

	@media all and (min-width: 800px)
		width 50%

	@media all and (min-width: 1200px)
		width 40%

	&__field
		margin-bottom 1em

	&__label
		display none

		@media all and (min-width: 640px)
			display block
			margin-bottom .5em
			padding-left 1em

		@media all and (min-width: 800px)
			text-align left
			line-height 2em

		@media all and (min-width: 1200px)
			float left
			width 18%
			padding-right 2%
			padding-left 0
			text-align right

	&__input
	&__message
		padding 0 1em
		width 100%
		font-size 1.2em

	&__input
		height 2em

		@media all and (min-width: 1200px)
			width 80%

	&__message
		padding-top .4em
		height 4em

		@media all and (min-width: 1200px)
			width 80%
			margin-left 20%

	&__submit
		height 2em
		width 100%
		font-weight 900
		font-size 1.3em
		color white
		text-transform uppercase
		border none
		background-color #17f

		@media all and (min-width: 1200px)
			margin-left 50%
			width 50%

	&__error
		margin-top .5em
		padding-left 1em
		color #f22

		@media all and (min-width: 1200px)
			margin-left 25%

	&__link
		margin-top .5em
		color #22f
		text-decoration underline
		text-align center

		@media all and (min-width: 1200px)
			text-align right

	&__submit
	&__link
		cursor pointer
